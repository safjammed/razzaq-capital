{% extends "layout.twig" %}
{% block hero %}
<div id="hero">
        <!--  Video is muted & autoplays, placed after major DOM elements for performance & has an image fallback  -->
        <video playsinline preload="yes" id="video-background" autoplay="" loop="" muted="" playsinline="" poster="assets/img/poster.jpg" class="loaded" style="opacity: 1;">
        <source src="./assets/videos/vdo.mp4">
      </video>
        <div class="container">
            <div class="row top-bar load">
                <div class="logo small-12 medium-4 large-7 columns text-center">
                    <a href="/">
                        <img src="./assets/Razzaq-Capital-Logo-White.png">
                    </a>
                </div>
                <div class="small-12 medium-8 large-5 contact-us align-self-middle columns">
                    <a class="hero-link" target="_blank" href="#">Meet The Team</a>
                    <a class="hero-link" href="mailto:info@razzaqcapital.com?subject=General%20Inquiry">Contact Us</a>
                </div>
            </div>
            <div class="row intro-copy align-bottom">
                <div class="small-12 medium-12 large-offset-7 columns load  faded-black">
                    <h1><span>Creativity</span><span>Capitalized.</span></h1>
                    <!--<p>We are a Chicago-based private equity firm leveraging our global network and opportunistic approach to accelerate the growth of leading consumer companies.</p>-->
                    <p>A Chicago-based private equity firm accelerating the growth of leading consumer companies.</p>
                </div>
                <div class="small-12 medium-6 large-7 columns load">
                    <a class="down-arrow stop-animation" href="https://www.razzaqcapital.com/#approach"></a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block contents %}
    <div id="approach">
        <div class="container">
            <div class="row align-center">
                <div class="small-12 medium-12 large-10 columns">
                    <h3 class="hidden-section">Our Purpose</h3>
                    <p class="hidden-section">Everything we have done—from the culture we have nurtured, the funds we have created and the platform we have built—has been in support of that singular goal.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="section" id="office"></div>

    <div class="section" id="helping">
        <div class="container semi-full-screen">
            <div class="row align-center">
                <div class="small-12 medium-10">
                    <div class="typerr">
                        <h1><span>Helping <br>Companies</span><br><span class="typed"></span></h1>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div id="companies">
        <div class="">
            <div class="row ">
                <div class="container text-center m-p-25" style="width: 100%">
                    <div class="small-12">
                        <!-- <h3 class="subtitle">New chicago Capital Website</h3> -->
                        <h1 class="title">Our Portfolio.</h1>
                    </div>
                </div>
            </div>
            <div class="row no-padding" style="max-width: unset">
                <div class="small-6 medium-3 colorize">
                    <a href="http://scanhalal.org" target="_blank">
                        <img src="./assets/img/Scan-Halal.png" alt="scan halal" style="padding: 30px">
                    </a>
                </div>
                <div class="small-6 medium-3 colorize">
                    <a href="http://sunnahbar.com" target="_blank">
                        <img src="./assets/img/Sunnah-Bar.png" alt="sunnah bar">
                    </a>
                </div>
                <div class="small-6 medium-3 colorize">
                    <a href="http://zackies.com" target="_blank">
                        <img src="./assets/img/Zackies.png" alt="zackies">
                    </a>
                </div>
                <div class="small-6 medium-3 colorize">
                    <a href="http://minavitamins.com" target="_blank">
                        <img src="./assets/img/Mina-Vitamins.png" alt="minavitamins" style="padding: 30px">
                    </a>
                </div>
                <div class="small-6 medium-3 colorize">
                    <a href="http://minavitamins.com" target="_blank">
                        <img src="./assets/img/5197.png" alt="minavitamins">
                    </a>
                </div>
            </div>
        </div>
    </div>


    <div id="arriving" class="hidden-section" data-threshold="60">
        <div class="main-mtn-bg" style="transform: scale(1);"></div>
        <div class="container">
            <div class="row align-center">
                <div class="small-12 medium-12 large-10 columns">
                    <!-- <h3 class="hidden">New chicago Capital Website</h3> -->
                    <h1 class="title hidden" style="color: #fff">Arriving 2019</h1>
                    <div class="laptop" style="transform: translateY(-50px);">
                        <div class="mountain-bg">
                            <div class="bg" style="width: 1903px; height: 977.406px; transform: translateX(-726.484px) translateY(-356.687px) scale(1);"></div>
                        </div>
                        <img class="macbook" src="./assets/macbook2.svg">
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


{% block scripts %}
<script>
        $(function() {
            new TypeIt(".typed", {
                strings: ["making an impact.", "move at full speed.", "break down barriers.", "disrupt industries."],
                speed: 100,
                loop: !0,
                loopDelay: 500,
                breakLines: !1,
                cursor: !1
            }).go()
            //$(".colorize").height($(".colorize").width());
        });
    </script>
    <script type="text/javascript" src="./assets/app.js"></script>
{% endblock %}